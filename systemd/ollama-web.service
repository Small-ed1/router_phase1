[Unit]
Description=Ollama Web FastAPI Server
After=network.target
Wants=ollama.service

[Service]
Type=simple
User=small_ed
WorkingDirectory=/home/small_ed/cognihub
Environment="PATH=/home/small_ed/cognihub/venv/bin:/usr/bin:/bin"
ExecStart=/home/small_ed/cognihub/venv/bin/uvicorn app:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
StandardOutput=append:/home/small_ed/cognihub/fastapi.log
StandardError=append:/home/small_ed/cognihub/fastapi.log

[Install]
WantedBy=multi-user.target
